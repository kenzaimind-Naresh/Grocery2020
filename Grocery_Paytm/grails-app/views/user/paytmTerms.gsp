    <script>
        function openNav(){
            document.getElementById('navigation').classList.add('moveLeft');
            document.getElementById('blkbg').style.display = 'block';
        }
        function hideNave(){
            document.getElementById('navigation').classList.remove('moveLeft');
            document.getElementById('blkbg').style.display = 'none';
        }
    </script>

